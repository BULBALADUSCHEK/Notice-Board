<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of advertisement" %>
            </div>
          </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_area :description, rows: 8, class: "form-control shadow rounded", placeholder: "Description of advertisement" %>
                </div>
        </div>
        <div class="form-group row">
          <%= f.label :expiration_date, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <label for="date"></label>                
                 <%= f.text_field :expiration_date, value: f.object.try(:expiration_date).try(:strftime, "%Y-%m-%dT%H:%M"), class: "form-control shadow rounded", type: 'datetime-local' %>
            </div>
        </div> 

      <div class="field">
      <label for="state"><span class="state"><%= @article.state %></span></label>
        
      <div class="form-group row justify-content-center">
      <%= f.submit "Submit", :class => 'btn btn-outline-light btn-lg' %>     
      </div>
    <% end %>
  </div>
  <div class="mb-3">
      <%= link_to '[ Cancel and return to advertisements listing ]', articles_path, class: "text-info" %>
      </div>
    </div>
  </div> 
