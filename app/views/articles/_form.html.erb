<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors'%>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of advertisement" %>
            </div>
          </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_area :description, rows: 8, class: "form-control shadow rounded", placeholder: "Description of advertisement" %>
                <label for="date">Expired at: </label>
                <input type="date" id="date" name="date"/>
                 <input type="time" id="time" name="time"/>
            </div>
        </div>
      <div class="form-group row justify-content-center">
      <%= f.submit "Submit", :class => 'btn btn-outline-light btn-lg' %>     
      </div>
    <% end %>
  </div>
  <div class="mb-3">
      <%= link_to '[ Cancel and return to advertisements listing ]', articles_path, class: "text-info" %>
      </div>
    </div>
  </div> 



