<div class="container">
  <% @articles.each do |article| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          <% if article.user %>
            by <%= link_to article.user.username, user_path(article.user) %>
          <p>State: <%= article.state %></p>
          <% end %>
        </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>        
              <p class="card-text"><%= article.description %></p>                
              <%= link_to "Comment", article_path(article), class: "btn btn-outline-info" %>                     
              <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
                <%# <%= link_to "Close", article_change_state_path(article, {state: 2}), method: :patch, class: "btn btn-outline-danger" %> 
                
              <%= button_to "Close",
                  article_change_state_path(article),
                  method: :patch, params: {state: 2} %>
          </div>
              <div class="card-footer text-muted">
                <small>Expired at: <%= article.expiration_date %>, 
                edited <%= time_ago_in_words(article.updated_at) %> ago</small>       
              </div>
      </div>    
    </div>
  </div>
  <% end %>
</div>